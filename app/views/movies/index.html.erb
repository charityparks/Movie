<h1>Movies!</h1>
<p>
  <h4> Movie Search:</h4>
    <%= form_tag(movies_path, method: :get) do %>
    <%=text_field_tag(:search, params[:search]) %>
    <%= submit_tag ("Search") %>
    <% end %></p>

<%= link_to "Add a Movie", new_movie_path %>  |
<%= link_to "G Rated Movies", movies_g_rating_path %>  |
<%= link_to "PG Rated Movies", movies_pg_rating_path %>  |
<%= link_to "R Rated Movies", movies_r_rating_path %>

<% @movies.each do |movie| %>
<h3><%= link_to movie.title, movie_path(movie)%></h3>

<% end %>
