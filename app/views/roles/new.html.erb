<h2> Add a new role for actor... <%= @actor.name %> </h2>



<%= form_for @actor do |f| %>
  <%= f.label :Movie %>
  <div><%= f.collection_select :movie_ids, Movie.all, :id, :title, prompt: true %></div>
  <%= f.label :Category %>
  <div><%= f.text_field :role %></div>
  <%= f.hidden_field :actor_id, value: @actor.id %>
  <%= f.submit "Create Role" %>
<% end %>
